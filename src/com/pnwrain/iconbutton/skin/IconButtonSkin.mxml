<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/halo"
		alpha=".6" alpha.over="1" >
	<s:layout>
		<s:BasicLayout />
	</s:layout>
	<fx:Metadata>
		[HostComponent("com.pnwrain.iconbutton.component.IconButton")]
	</fx:Metadata>
	<s:states>
		<mx:State name="up" />
		<mx:State name="over" />
		<mx:State name="down" />
		<mx:State name="disabled" />
	</s:states>
	
	<s:BitmapImage id="iconHolder" horizontalCenter="0" />
	<s:Label text="{hostComponent.label}" horizontalCenter="0" top="37" />
	
	<!-- Click test. So the whole skin does the over state -->
	<s:Rect top="0" bottom="0" left="0" right="0">
		<s:fill>
			<mx:SolidColor color="0x00000000" alpha="0" />
		</s:fill>
	</s:Rect>
	
</s:Skin>
